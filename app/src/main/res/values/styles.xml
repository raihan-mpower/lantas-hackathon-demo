<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeLantas" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0574d5</item>
        <item name="colorPrimaryDark">#0574d5</item>
        <item name="colorAccent">#0574d5</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@drawable/icon_menu</item>
        <item name="android:displayOptions">homeAsUp</item>
        <item name="android:homeAsUpIndicator">@drawable/icon_menu</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
